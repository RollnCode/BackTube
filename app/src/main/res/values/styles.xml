<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    
    <style name="Notification"/>
    
    <style name="Notification.Button">
        <item name="android:layout_width">@dimen/buttons_size</item>
        <item name="android:layout_height">@dimen/buttons_size</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <style name="Notification.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/spacing</item>
        <item name="android:paddingEnd">@dimen/spacing</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>