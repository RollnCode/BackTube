<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rollncode.youtube">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.rollncode.youtube.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.rollncode.youtube.WebActivity"/>

        // This is temporary for testing only I use two services

        <service
            android:name="com.rollncode.youtube.TestService"
            android:enabled="true" />

        <service
            android:name="com.rollncode.youtube.YoutubeService"
            android:enabled="true" />

    </application>

</manifest>